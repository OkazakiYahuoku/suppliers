{
  "root": true,
  "extends": [
    "next/core-web-vitals"
  ],
  "settings": {
    "next": {
      "rootDir": [
        "./"
      ]
    }
  },
  "rules": {
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "reservedFirst": true,
        "shorthandFirst": true
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        },
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "never",
        "pathGroupsExcludedImportTypes": [
          "builtin"
        ]
      }
    ]
  }
}
